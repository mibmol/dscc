{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/__pycache__/**": true,
  },
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length=95"],
  "python.linting.pylintArgs": [
    "--load-plugins=pylint_django --disable=C0111"
  ]
}
